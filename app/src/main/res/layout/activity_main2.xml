<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.crianbra.leccion.Main2Activity">



    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="0dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <EditText
            android:id="@+id/edit_pregunta"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="441dp"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_hola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola "
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="195dp"
            tools:layout_editor_absoluteY="16dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txt_hola"
            android:layout_toEndOf="@+id/txt_hola" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:text="1"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="60dp"
            android:layout_below="@+id/txt_hola"
            android:layout_toRightOf="@+id/txt_hola"
            android:layout_toEndOf="@+id/txt_hola"
            android:layout_marginTop="19dp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/btn_3"
            android:layout_alignLeft="@+id/btn_5"
            android:layout_alignStart="@+id/btn_5"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:text="2"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="60dp" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/btn_5"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/btn_2"
            android:layout_toStartOf="@+id/btn_2"
            android:background="@color/colorPrimary"
            android:text="3"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="190dp" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBaseline="@+id/btn_5"
            android:layout_alignBottom="@+id/btn_5"
            android:layout_toEndOf="@+id/txt_hola"
            android:layout_toRightOf="@+id/txt_hola"
            android:background="@color/colorPrimary"
            android:text="4"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"
            android:text="5"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="255dp"
            tools:layout_editor_absoluteY="317dp"
            android:layout_marginBottom="35dp"
            android:layout_above="@+id/edit_pregunta"
            android:layout_alignRight="@+id/btn_siguiente"
            android:layout_alignEnd="@+id/btn_siguiente"
            android:layout_marginRight="44dp"
            android:layout_marginEnd="44dp" />

        <Button
            android:id="@+id/btn_siguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/edit_pregunta"
            android:layout_toEndOf="@+id/edit_pregunta"
            android:layout_toRightOf="@+id/edit_pregunta"
            android:background="@color/colorPrimary"
            android:text=">>"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
