<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.crianbra.leccion.Main3Activity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/txt_hola_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola "
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txt_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txt_hola_2"
            android:layout_toRightOf="@+id/txt_hola_2"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/txt_aciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de Aciertos"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="107dp"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="132dp"
            android:layout_below="@+id/txt_hola_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txt_aciertos_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/txt_aciertos"
            android:layout_alignBottom="@+id/txt_aciertos"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/background_light"
            android:text="" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
